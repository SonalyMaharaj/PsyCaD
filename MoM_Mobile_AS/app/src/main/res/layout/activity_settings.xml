<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/home">

    <ImageView
        android:id="@+id/id_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/roundlogo"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/SettingsHeading"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/SettingsHeading"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_textborder"
        android:gravity="center"
        android:text="Settings"
        android:padding="10dp"
        android:textColor="#5023af"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_logo" />

    <TextView
        android:id="@+id/EditDetail"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_textborder"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="Edit details"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SettingsHeading" />

    <TextView
        android:id="@+id/LogOut"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/round_textborder"
        android:drawableStart="@drawable/ic_baseline_logout_24"
        android:drawablePadding="20dp"
        android:text="Log Out"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:onClick="LogOut"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditDetail"/>

    <TextView
        android:id="@+id/brought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Brought to you by PsyCaD"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintRight_toLeftOf="@+id/uj"
        app:layout_constraintStart_toStartOf="@id/SettingsHeading"
        app:layout_constraintTop_toBottomOf="@id/LogOut" />

    <ImageView
        android:id="@+id/uj"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/ujlogo"
        app:layout_constraintEnd_toEndOf="@id/SettingsHeading"
        app:layout_constraintLeft_toRightOf="@+id/brought"
        app:layout_constraintTop_toBottomOf="@+id/LogOut" />

</androidx.constraintlayout.widget.ConstraintLayout>