<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopUpWindow"
    android:background="@drawable/edit_textborder">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="215dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:text="Choose your campus"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAPK"
        android:layout_width="301dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:onClick="OpenKingsway"
        android:text="Kingsway Campus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <Button
        android:id="@+id/btnAPB"
        android:layout_width="301dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:onClick="OpenBunting"
        android:text="Bunting Road Campus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAPK" />

    <Button
        android:id="@+id/btnDFC"
        android:layout_width="301dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:onClick="OpenDFC"
        android:text="Doornfontein Campus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAPB" />

    <Button
        android:id="@+id/btnSWC"
        android:layout_width="301dp"
        android:layout_height="45dp"
        android:onClick="OpenSWT"
        android:text="Soweto Campus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDFC"
        app:layout_constraintVertical_bias="0.027" />
</androidx.constraintlayout.widget.ConstraintLayout>