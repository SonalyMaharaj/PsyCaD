<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="@drawable/home">

    <ImageView
        android:id="@+id/id_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/roundlogo"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your campus"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/APKButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="APK"
        android:textAllCaps="true"
        android:textColor="#f66608"
        android:textSize="50px"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/DFCButton"
        app:layout_constraintTop_toBottomOf="@+id/campus" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/DFCButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:width="100dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="DFC"
        android:textAllCaps="true"
        android:textColor="#f66608"
        android:textSize="50px"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@+id/APKButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campus" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/APBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/APKButton"
        android:width="100dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="APB"
        android:textAllCaps="true"
        android:textColor="#f66608"
        android:textSize="50px"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/APKButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/SWCButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SWCButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DFCButton"
        android:layout_toRightOf="@id/APBButton"
        android:width="100dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="SWC"
        android:textAllCaps="true"
        android:textColor="#f66608"
        android:textSize="50px"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/DFCButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/APBButton"/>

    <Spinner
        android:id="@+id/psychologist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/APBButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_buttonborder"
        android:text="Save As Default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psychologist" />

    <TextView
        android:id="@+id/brought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Brought to you by PsyCaD"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintRight_toLeftOf="@+id/uj"
        app:layout_constraintStart_toStartOf="@id/APBButton"
        app:layout_constraintTop_toBottomOf="@id/buttonSave" />

    <ImageView
        android:id="@+id/uj"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ujlogo"
        app:layout_constraintEnd_toEndOf="@id/SWCButton"
        app:layout_constraintLeft_toRightOf="@+id/brought"
        app:layout_constraintTop_toBottomOf="@+id/buttonSave" />

</androidx.constraintlayout.widget.ConstraintLayout>