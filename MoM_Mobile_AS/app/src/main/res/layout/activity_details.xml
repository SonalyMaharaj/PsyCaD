<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:background="@drawable/home">

    <ImageView
        android:id="@+id/momLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/roundlogo"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/campusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your campus"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/momLogo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ApkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="140dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="APK"
        android:onClick="apkButtonClicked"
        android:textAllCaps="true"
        android:textColor="#F6660A"
        android:textSize="50px"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/DfcButton"
        app:layout_constraintTop_toBottomOf="@+id/momLogo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/DfcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="140dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="DFC"
        android:onClick="dfcButtonClicked"
        android:textAllCaps="true"
        android:textColor="#F6660A"
        android:textSize="50px"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@+id/ApkButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/momLogo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ApbButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="140dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="APB"
        android:onClick="apbButtonClicked"
        android:textAllCaps="true"
        android:textColor="#F6660A"
        android:textSize="50px"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/SwcButton"
        app:layout_constraintTop_toBottomOf="@+id/ApkButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SwcButton"
        android_layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ApbButton"
        android:width="140dp"
        android:height="100dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="SWC"
        android:onClick="swtButtonClick"
        android:textAllCaps="true"
        android:textColor="#F6660A"
        android:textSize="50px"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DfcButton"
        app:layout_constraintLeft_toRightOf="@+id/ApbButton"/>

    <TextView
        android:id="@+id/psychologistLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your psychologist"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ApbButton" />

    <Spinner
        android:id="@+id/psychologistSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/psychologistLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/round_buttonborder"
        android:text="Save As Default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psychologistSpinner" />

    <TextView
        android:id="@+id/brought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="Brought to you by PsyCaD"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintRight_toLeftOf="@+id/uj"
        app:layout_constraintTop_toBottomOf="@+id/momLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/uj"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/ujlogo"
        app:layout_constraintLeft_toRightOf="@+id/brought"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/momLogo"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>