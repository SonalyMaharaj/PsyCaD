<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/psycad"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/roundlogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            />
        <EditText
            android:id="@+id/CallLogHeading"
            android:layout_width="1000dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="20dp"
            android:backgroundOutline="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:hint="Emergency Calls"
            android:padding="10dp"
            android:textSize="25dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700" />

        <TextView
            android:id="@+id/clickhere"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:text="Please click to dial"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_below="@id/CallLogHeading"
            />

        <ListView
            android:id="@+id/CallLog"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_below="@id/clickhere"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:divider="@color/black"
            android:dividerHeight="2dp" />
        <!--Footer Begins-->

        <ImageView
            android:id="@+id/poweredby"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="200dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ujlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:text="Brought to you by PsyCaD"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            />

    </RelativeLayout>

</LinearLayout>