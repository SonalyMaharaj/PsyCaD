<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/psycad">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/roundlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/APKButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="50dp"
            android:width="120dp"
            android:height="120dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_textborder"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:text="APK"
            android:textAllCaps="true"
            android:textColor="#f66608"
            android:textSize="50px" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/DFCButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="50dp"
            android:width="120dp"
            android:height="120dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_textborder"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:text="DFC"
            android:textAllCaps="true"
            android:textColor="#f66608"
            android:textSize="50px" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/APBButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/APKButton"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:width="120dp"
            android:height="120dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_textborder"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:text="APB"
            android:textAllCaps="true"
            android:textColor="#f66608"
            android:textSize="50px" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/SWCButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/APBButton"
            android:layout_below="@id/DFCButton"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="50dp"
            android:width="120dp"
            android:height="120dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_textborder"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:text="SWC"
            android:textAllCaps="true"
            android:textColor="#f66608"
            android:textSize="50px" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_above="@id/buttonSave"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:outlineSpotShadowColor="@color/black"
            android:background="@drawable/edit_textborder"
            android:textColorHint="@color/black"
            android:text="Select a Psychologist"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_buttonborder"
            android:text="Save As Default"
        />
        />

        <!--Footer begins-->
        <ImageView
            android:id="@+id/poweredby"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="200dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ujlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="30dp"
            android:text="Brought to you by PsyCaD"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_above="@id/poweredby"
            />

    </RelativeLayout>
</LinearLayout>
