<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/psycad"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/roundlogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            />

        <EditText
            android:id="@+id/EdiaryHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_below="@id/logo"
            android:background="@drawable/edit_textborder"
            android:backgroundOutline="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:hint="Electronic Diary"
            android:padding="10dp"
            android:textSize="25dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/AddNewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginStart="-100dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/EdiaryHeading"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableTop="@drawable/ic_baseline_add_24" />

        <ListView
            android:id="@+id/DiaryList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/EdiaryHeading"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="75dp"
            android:layout_centerHorizontal="true"
            android:dividerHeight="1dp"
            android:background="@drawable/edit_textborder"
            />
        <!--Footer begins -->

        <ImageView
            android:id="@+id/poweredby"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="200dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ujlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:text="Brought to you by PsyCaD"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            />


    </RelativeLayout>

</LinearLayout>