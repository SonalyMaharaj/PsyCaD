<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/psycad"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/roundlogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            />
        <EditText
            android:id="@+id/MoodTrackHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_below="@id/logo"
            android:background="@drawable/edit_textborder"
            android:backgroundOutline="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:hint="Mood Tracker"
            android:padding="10dp"
            android:textSize="25dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MoodTrackHeading"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:columnCount="3"
            android:rowCount="3">

            <ImageView
                android:id="@+id/happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:src="@drawable/grinning"
                android:tooltipText="Happy" />

            <ImageView
                android:id="@+id/sad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:src="@drawable/sob"
                android:tooltipText="Sad"/>

            <ImageView
                android:id="@+id/sick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:src="@drawable/face_with_thermometer"
                android:tooltipText="Sick" />

            <ImageView
                android:id="@+id/indifferent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:src="@drawable/no_mouth"
                android:tooltipText="Indifferent"/>

            <ImageView
                android:id="@+id/celebrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:src="@drawable/partying_face"
                android:tooltipText="Celebrate"/>

            <ImageView
                android:id="@+id/shocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:src="@drawable/scream"
                android:tooltipText="Shocked"/>

            <ImageView
                android:id="@+id/angry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:src="@drawable/rage"
                android:tooltipText="Angry"/>

            <ImageView
                android:id="@+id/cool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:src="@drawable/sunglasses"
                android:tooltipText="Cool"/>

            <ImageView
                android:id="@+id/anxious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:src="@drawable/persevere"
                android:tooltipText="Anxious"/>
        </GridLayout>


        <!--Footer Begins -->
        <ImageView
            android:id="@+id/poweredby"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="200dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ujlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:text="Brought to you by PsyCaD"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            />

    </RelativeLayout>

</LinearLayout>