<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/psycad"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/roundlogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/AppButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="50dp"
            android:width="140dp"
            android:height="140dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableTop="@drawable/ic_baseline_calendar_month_24"
            android:drawablePadding="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:text="Appointments"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30px" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/EDiaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="50dp"
            android:width="140dp"
            android:height="140dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableTop="@drawable/ic_baseline_edit_note_24"
            android:drawablePadding="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:text="My Journal"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30px" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MoodButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AppButton"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:width="140dp"
            android:height="140dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableTop="@drawable/ic_baseline_mood_24"
            android:drawablePadding="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:text="Mood Tracker"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30px" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/CallButton"
            android_layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/EDiaryButton"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:layout_toRightOf="@id/MoodButton"
            android:width="140dp"
            android:height="140dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableTop="@drawable/ic_baseline_call_24"
            android:drawablePadding="10dp"
            android:outlineAmbientShadowColor="@color/black"
            android:text="Emergency Call"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30px" />

            <ImageView
                android:id="@+id/SettingsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_settings_24"
                android:layout_toRightOf="@id/logo"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="70dp"
                android:clickable="true"
            />
        <!--Footer Begins -->
        <ImageView
            android:id="@+id/poweredby"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="200dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ujlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:text="Brought to you by PsyCaD"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            />

    </RelativeLayout>

</LinearLayout>